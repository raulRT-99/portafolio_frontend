---
import { getRelativeLocaleUrl } from 'astro:i18n';
const currentLocale = Astro.url.pathname.split('/')[1] || 'es';
---


<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Raul Reyes Torres</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4Q6Gf2aSP4eDXB8Miphtr37CMZZQ5oXLH2yaXMJ2w8e2ZtHTl7GptT4jmndRuHDT" crossorigin="anonymous">
  <link rel="stylesheet" href="../../../public/styles/styles.css">
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v6.4.0/css/all.css">
</head>

<nav class="navbar navbar-expand-lg bg-body-tertiary bg-dark" data-bs-theme="dark">
  <div class="container-fluid">
    <a class="navbar-brand" href={getRelativeLocaleUrl(currentLocale, '/')}><i class="fas fa-address-card fa-lg"></i></a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item">
          <a class="nav-link" href={getRelativeLocaleUrl(currentLocale, 'certificates')}><i class="fas fa-address-book fa-sm"></i> Certificados</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href={getRelativeLocaleUrl(currentLocale, 'experience')}><i class="fas fa-suitcase fa-sm"></i> Experiencia</a>
        </li>        
        <li class="nav-item">
          <a class="nav-link" href={getRelativeLocaleUrl(currentLocale, 'additional')}><i class="fas fa-sm fa-folder-plus"></i> Adicional</a>
        </li>
      </ul>
      <form action="http://localhost:5000/downloadcv/esp" method="get">
          <button type="submit" class="btn btn-outline-secondary"><i class="fa-solid fa-file-arrow-down"></i></button>
        </form>
        &nbsp;
      <div class="btn-group" role="group" aria-label="Basic radio toggle button group">
          <input type="radio" class="btn-check" name="lang" id="btnradio1" checked value="es">
          <label class="btn btn-outline-primary" for="btnradio1">Espa√±ol</label>
          <input type="radio" class="btn-check" name="lang" id="btnradio2" value="en">
          <label class="btn btn-outline-primary" for="btnradio2">English</label>
      </div>
    </div>
  </div>
</nav>
<body>
  
  
